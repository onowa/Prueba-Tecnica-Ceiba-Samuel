{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/CeibaFunds.sln"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build-api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/CeibaFunds.API/CeibaFunds.API.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "clean",
      "command": "dotnet",
      "type": "process",
      "args": ["clean", "${workspaceFolder}/CeibaFunds.sln"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "restore",
      "command": "dotnet",
      "type": "process",
      "args": ["restore", "${workspaceFolder}/CeibaFunds.sln"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": ["test", "${workspaceFolder}/CeibaFunds.sln"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "test-unit",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/tests/CeibaFunds.UnitTests/CeibaFunds.UnitTests.csproj",
        "--verbosity",
        "normal"
      ],
      "problemMatcher": "$msCompile",
      "group": "test"
    },
    {
      "label": "test-integration",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/tests/CeibaFunds.IntegrationTests/CeibaFunds.IntegrationTests.csproj",
        "--verbosity",
        "normal"
      ],
      "problemMatcher": "$msCompile",
      "group": "test"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/CeibaFunds.API/CeibaFunds.API.csproj"
      ],
      "options": {
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development",
          "AWS_ACCESS_KEY_ID": "dummy",
          "AWS_SECRET_ACCESS_KEY": "dummy",
          "AWS_REGION": "us-east-1",
          "DynamoDB_Endpoint": "http://localhost:8000"
        }
      },
      "problemMatcher": "$msCompile",
      "isBackground": true
    },
    {
      "label": "start-dynamodb",
      "type": "shell",
      "command": "docker-compose up -d dynamodb-local dynamodb-admin",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "stop-dynamodb",
      "type": "shell",
      "command": "docker-compose stop dynamodb-local dynamodb-admin",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build"
    },
    {
      "label": "docker-build",
      "type": "shell",
      "command": "docker-compose build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "docker-up-dev",
      "type": "shell",
      "command": "docker-compose -f docker-compose.yml -f docker-compose.override.yml up -d",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "dependsOn": ["docker-build"]
    },
    {
      "label": "docker-down",
      "type": "shell",
      "command": "docker-compose down",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build"
    },
    {
      "label": "docker-logs",
      "type": "shell",
      "command": "docker-compose logs -f",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    }
  ]
}
